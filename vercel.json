{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/blog/clawhub-malware-case-study", "destination": "/post-clawhub" },
    { "source": "/blog/how-trust-scoring-works", "destination": "/post-trust-scoring" },
    { "source": "/blog/mcp-supply-chain-attacks-timeline", "destination": "/post-mcp-timeline" },
    { "source": "/blog/introducing-trust-index", "destination": "/post-trust-index" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
